<div>
  <%= form_with(model: Recipe) do |form| %>
    <%= form.label :title, "Put in your recipe title:" %>
    <%= form.text_field :title %>
    <%= form.label :body, 'Put in the recipe body here' %>
    <%= form.text_field :body %>
    <%= form.label :ingredients, "Put in your recipe ingredients:" %>
    <%= form.text_field :ingredients %>
    

    <%= form.hidden_field :user_id, :value => session[:user_id] %>
    
    <%= form.submit "Add recipe" %>
  <% end %> 
</div>